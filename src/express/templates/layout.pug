doctype html
html(lang='ru')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width,initial-scale=1')
    meta(name='description' content='Личный блог Типотека')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title Типотека
    link(rel='preload' href='/fonts/Inter-Regular.woff2' as='font' crossorigin='anonymous')
    link(rel='preload' href='/fonts/Inter-Medium.woff2' as='font' crossorigin='anonymous')
    link(rel='preload' href='/fonts/SFProDisplay-Regular.woff2' as='font' crossorigin='anonymous')
    link(rel='stylesheet' href='/css/style.min.css')
    style.
      .server-error {
        margin: 20px 0;
        padding: 10px;

        border-radius: 10px;
        background-color: tomato;

        color: white;
      }
  body
    include ./mixins/index.pug

    .wrapper
      include ./partials/header.pug
      block content
      include ./partials/footer.pug
      include ./partials/main/comment-template.pug

    script(src='/js/vendor.js')
    script(src='/js/main.js')
    script(
      src="https://cdn.socket.io/4.4.1/socket.io.min.js"
      integrity="sha384-fKnu0iswBIqkjxrhQCTZ7qlLHOFEgNkRmK2vaO/LbTZSXdJfAu6ewRBdwHPhBo/H"
      crossorigin="anonymous"
    )
    script(src='/js/socket.js')
