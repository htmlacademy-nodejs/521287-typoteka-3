- const hasSelectedCategories = Boolean(selectedCategoriesIds);

if (categories)
  section.main-page__theme-list
    h2.visually-hidden Список тем

    - const articleClass = areArticleCategories ? `post__themes` : ``
    ul(class=`themes ${articleClass}`)
      each category in categories
        -
          const isSelected = hasSelectedCategories &&
            selectedCategoriesIds.includes(category.id);

        li.themes__item
          - const selectedClass = isSelected ? ' themes__item-link--active' : '';
          - const href = isSelected ? '#' : `/articles/category/${category.id}`;

          a(class=`themes__item-link ${selectedClass}` href=href)
            | #{category.name}

            - const hasCount = Boolean(category.count);
            if hasCount
              sup #{category.count}

          if (areArticleCategories)
            button.themes__remove-btn(type='button').
              Удалить категорию
